apiVersion: resources.yatai.ai/v1alpha1
kind: BentoRequest
metadata:
    name: iris-classifier
    namespace: yatai
spec:
    bentoTag: iris_classifier:wbv2kla24snskasc
---
apiVersion: serving.yatai.ai/v2alpha1
kind: BentoDeployment
metadata:
    name: prod
    namespace: yatai
spec:
    bento: iris-classifier
    ingress:
        enabled: true
        tls:
            secretName: yatai.${DOMAIN}
    resources:
        limits:
            cpu: "500m"
            memory: "512Mi"
        requests:
            cpu: "250m"
            memory: "256Mi"
    autoscaling:
        maxReplicas: 3
        minReplicas: 2
    runners:
        - name: iris_clf
          resources:
              limits:
                  cpu: "500m"
                  memory: "500Mi"
              requests:
                  cpu: "200m"
                  memory: "200Mi"
          autoscaling:
              maxReplicas: 3
              minReplicas: 2
