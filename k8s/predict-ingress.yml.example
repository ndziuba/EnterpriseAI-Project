apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: prod-canary
  namespace: yatai
spec:
  ingressClassName: nginx
  tls:
  - secretName: yatai.${DOMAIN}
  rules:
  - host: predict.yatai.${DOMAIN}
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: prod
            port:
              number: 3000

---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: staging-canary
  namespace: yatai
  annotations:
    nginx.ingress.kubernetes.io/canary: "true"
    nginx.ingress.kubernetes.io/canary-weight: "50"
spec:
  ingressClassName: nginx
  tls:
  - secretName: yatai.${DOMAIN}
  rules:
  - host: predict.yatai.${DOMAIN}
    http:
      paths:
      - pathType: Prefix
        path: "/"
        backend:
          service:
            name: staging
            port:
              number: 3000
